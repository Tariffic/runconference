<div class="container" role="main">
  <div class="row" style="text-align: center">
    <div class="col-lg-12">
      <br><br>
      
      <h1 style="text-align: center; padding-top: 0px; margin-top: 0px"><i class='tick' style="font-size:175px">R</i>unconference</h1>
      <hr style="width: 80%"/>
      <br />
      <h2 style="text-align: center">Conferences</h2>
      <% @conferences.each do |conference| %>
        <div class="card" style="width: 85%; text-align: center">
          <div class="col-lg-12" style="padding-left: 30px">
            <br /><br />
            <h1><%= conference.name %></h1>
            <h3><%= conference.description %></h3>
            <h2><%= conference.location %></h2>
            <br /><br />
            <%= link_to "View Conference Topics", conference_topics_path(conference_id: conference.id), class: "btn btn-success", style: "padding: 20px 20px 20px 20px" %>
            <br /><br /><br />
          </div>
        </div>
        <br><br>
      <% end %>
    </div>
  </div>
</div>
